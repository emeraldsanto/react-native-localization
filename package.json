{
	"name": "react-native-localization",
	"version": "0.1.0",
	"description": "A lightweight React Native localization utility",
	"main": "lib/commonjs/index",
	"module": "lib/module/index",
	"types": "lib/typescript/src/index.d.ts",
	"react-native": "src/index",
	"source": "src/index",
	"files": [
		"src",
		"lib",
		"android",
		"ios",
		"cpp",
		"react-native-localization.podspec",
		"!lib/typescript/example",
		"!**/__tests__",
		"!**/__fixtures__",
		"!**/__mocks__"
	],
	"scripts": {
		"typescript": "tsc --noEmit",
		"example": "yarn --cwd example"
	},
	"keywords": [
		"react-native",
		"ios",
		"android"
	],
	"repository": "https://github.com/emeraldsanto/react-native-localization",
	"author": "emeraldsanto <yanick.belanger@yahoo.com> (https://github.com/emeraldsanto)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/emeraldsanto/react-native-localization/issues"
	},
	"homepage": "https://github.com/emeraldsanto/react-native-localization#readme",
	"devDependencies": {
		"@types/jest": "^26.0.7",
		"@types/react": "^16.9.43",
		"@types/react-native": "0.62.13",
		"react": "16.11.0",
		"react-native": "0.62.2",
		"typescript": "^3.9.7"
	},
	"peerDependencies": {
		"react": "*",
		"react-native": "*"
	},
	"jest": {
		"preset": "react-native",
		"modulePathIgnorePatterns": [
			"<rootDir>/example/node_modules",
			"<rootDir>/lib/"
		]
	}
}
